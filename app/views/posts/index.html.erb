<% if notice.present? %>
  <div class="alert alert-success mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="d-flex align-items-center my-3">
  <h1>Posts</h1>
  <%= link_to "New post", new_post_path, class: "btn btn-primary ms-auto" %>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>
