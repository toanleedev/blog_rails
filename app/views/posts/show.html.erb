<% if notice.present? %>
  <div class="alert alert-success mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="d-flex mb-3 mt-3">
  <%= link_to "Back to posts", posts_path, class: "btn btn-link" %>
  <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary ms-auto me-1" %>
  <%= button_to "Destroy", @post, method: :delete, class: "btn btn-danger" %>
</div>
<div class="card" id="<%= dom_id @post %>">
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text">
      <%= @post.body %>
    </p>
  </div>
</div>
